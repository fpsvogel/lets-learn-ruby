<li>
  <figure>
    <a href=<%= @item.fetch(:url) %>>
      <% if @item.fetch(:image) %>
        <img src=<%= @item[:image] %>>
      <% else %>
        <div class="missing-image-wrapper">
          <div>‚ùì</div>
        </div>
      <% end %>

      <h5><%= @item.fetch(:name) %></h5>
    </a>

    <% if @item.fetch(:description) %>
      <figcaption>
        <%=raw Kramdown::Document.new(@item.fetch(:description)).to_html %>
      </figcaption>
    <% end %>
  </figure>
</li>