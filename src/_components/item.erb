<li>
  <figure>
    <% if @item.fetch(:image) %>
      <img src=<%= @item[:image] %>>
    <% else %>
      <p class="missing-image">
        ‚ùì
      </p>
    <% end %>
    <figcaption>
      <a href=<%= @item.fetch(:url) %>>
        <%= @item.fetch(:name) %>
      </a>
      <% if @item.fetch(:description) %>
        <%=raw Kramdown::Document.new(@item.fetch(:description)).to_html %>
      <% end %>
    </figcaption>
  </figure>
</li>